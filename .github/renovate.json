{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["github>arillso/.github:renovate-ansible"],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["^roles/.*/defaults/main\\.yml$"],
            "matchStrings": [
                "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)(?:\\s+extractVersion=(?<extractVersion>.*?))?(?:\\s+versioning=(?<versioning>.*?))?\\s*\\n.*?:\\s*[\"']?(?<currentValue>.*?)[\"']?\\s*$"
            ],
            "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{/if}}",
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        }
    ]
}
